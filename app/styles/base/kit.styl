#screen
  // position absolute
  // left 0
  // top 0
  position relative
  overflow hidden


  width 100vw //100%
  height 100vh //100%

  background #000
  perspective 500px


.cube
  position absolute
  top 50%
  left 50%
  width 0
  height 0

  user-select none
  transform-style preserve-3d


.face
  position absolute
  margin-left -300px
  margin-top -200px
  width 600px
  height 400px
  backface-visibility hidden
  transform-origin 50% 50%

  //transition outline 0.5s ease-in-out 0s
  transition outline 0.8s
  cursor pointer
  &:hover
    outline 10px solid #2196F3


